<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/app_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <fragment
            android:id="@+id/cell_course_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.byr.assistant.ui.home.HomeCellCourse"/>

        <fragment
            android:id="@+id/cell_event_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.byr.assistant.ui.home.HomeCellEvent"/>

        <fragment
            android:id="@+id/cell_forum_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.byr.assistant.ui.home.HomeCellForum"/>

        <fragment
            android:id="@+id/cell_note_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.byr.assistant.ui.home.HomeCellNote"/>


    </LinearLayout>

</ScrollView>


