<resources>


    <!-- Configure the action bar -->

    <style name="Theme.Styled" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/app_color_light</item>
        <item name="android:background">@color/app_color_light</item>

        <item name="backgroundSplit">@color/white</item>
        <item name="android:backgroundSplit">@color/white</item>
    </style>

    <style name="IconActionBar">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="DropdownItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Configure base text view -->
    <style name="TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextView.Dark" parent="TextView">
        <item name="android:textColor">@color/app_color_dark</item>
    </style>

    <style name="TextView.Light" parent="TextView">
        <item name="android:textColor">@color/app_color_light</item>
    </style>

    <style name="TextView.Grey" parent="TextView">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <!-- Configure home layout -->
    <style name="HomeLayout">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="HomeLayoutCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HomeText.XLarge" parent="TextView.Dark">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="HomeText.Sub" parent="TextView.Light">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="HomeText.Large" parent="TextView.Grey">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Configure adapter item -->
    <style name="AdapterText" parent="TextView.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="AdapterText.Grey" parent="TextView.Grey">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AdapterCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">top</item>
    </style>

    <!-- Configure default listview-->
    <style name="TitleText">
        <item name="android:textSize">17sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ListTitleText" parent="TitleText"></style>

    <style name="SubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ListSubtitleText" parent="SubtitleText"></style>

    <style name="ListView">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:background">#00000000</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

</resources>